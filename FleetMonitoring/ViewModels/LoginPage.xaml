<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FleetMonitoring.ViewModels.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            BackgroundColor="Gray">

            <Label
                Text="Logowanie"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                x:Name="FormLogin"
                Placeholder="login"
                WidthRequest="250"
                HorizontalOptions="Center"/>

            <Entry
                x:Name="FormPassword"
                IsPassword="True"
                Placeholder="hasło"
                WidthRequest="250"
                HorizontalOptions="Center"/>

            <Button
                x:Name="FormLoginBtn"
                Text="Zaloguj się"
                HorizontalOptions="Center"
                Clicked="FormLoginBtn_Clicked"/>

            <Label
                Text="user 123"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="8"
                HorizontalOptions="Center" />
                
        </VerticalStackLayout>

</ContentPage>
